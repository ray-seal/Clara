<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/sky_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <Button
                android:id="@+id/btn_crisis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRISIS!"
                android:textColor="#FFFFFF"
                android:background="#FF0000"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_weight="1"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="6"/>
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Cover Photo with + overlay when editing -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/img_cover_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/orange"
                android:src="@drawable/ic_image"
                android:contentDescription="Cover Photo"/>

            <!-- + overlay, only visible in edit mode -->
            <ImageView
                android:id="@+id/cover_photo_plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:src="@drawable/ic_add_circle"
                android:contentDescription="Add Cover Photo"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Profile Photo with + overlay when editing -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/img_profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_white"
                android:src="@drawable/ic_person"
                android:elevation="4dp"
                android:contentDescription="Profile Photo"
                android:scaleType="centerCrop"/>

            <!-- + overlay, only visible in edit mode -->
            <ImageView
                android:id="@+id/profile_photo_plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:src="@drawable/ic_add_circle"
                android:contentDescription="Add Profile Photo"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Profile Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_white"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">

            <!-- Display Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display Name"
                    android:textStyle="bold"
                    android:textColor="@color/sky_blue"/>
                <EditText
                    android:id="@+id/edit_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your display name"
                    android:textColor="@color/sky_blue"
                    android:textSize="20sp"
                    android:inputType="textPersonName"/>
            </LinearLayout>

            <!-- Actual Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual Name"
                    android:textColor="@color/sky_blue"/>
                <EditText
                    android:id="@+id/edit_actual_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="(Optional)"
                    android:textColor="@color/sky_blue"
                    android:textSize="16sp"
                    android:inputType="textPersonName"/>
            </LinearLayout>

            <!-- Categories -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support Categories"
                android:textColor="@color/sky_blue"/>
            <LinearLayout
                android:id="@+id/layout_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <!-- Bio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:textColor="@color/sky_blue"/>
                <EditText
                    android:id="@+id/edit_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tell us about yourself"
                    android:textColor="@color/sky_blue"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:minLines="2"/>
            </LinearLayout>

            <!-- Contact/Link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact or Link"
                    android:textColor="@color/sky_blue"/>
                <EditText
                    android:id="@+id/edit_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="How can people contact you?"
                    android:textColor="@color/sky_blue"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress|textUri"/>
            </LinearLayout>

            <!-- Member Since and Posts -->
            <TextView
                android:id="@+id/txt_member_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member since: -"
                android:textColor="@color/orange"
                android:textStyle="italic"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/txt_num_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts: -"
                android:textColor="@color/orange"
                android:textStyle="italic"/>

            <!-- Privacy Switches neatly stacked -->
            <TextView
                android:text="Privacy Controls"
                android:textStyle="bold"
                android:textColor="@color/sky_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="4dp"/>

            <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <Switch
        android:id="@+id/switch_priv_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Display Name"
        android:textColor="@color/sky_blue"/>

    <Switch
        android:id="@+id/switch_priv_actual_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Actual Name"
        android:textColor="@color/sky_blue"/>

    <Switch
        android:id="@+id/switch_priv_profile_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Profile Picture"
        android:textColor="@color/sky_blue"/>

    <Switch
        android:id="@+id/switch_priv_cover_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Cover Photo"
        android:textColor="@color/sky_blue"/>

    <Switch
        android:id="@+id/switch_priv_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Support Categories"
        android:textColor="@color/sky_blue"/>

    <Switch
        android:id="@+id/switch_priv_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Bio"
        android:textColor="@color/sky_blue"/>

    <Switch
        android:id="@+id/switch_priv_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Contact/Link"
        android:textColor="@color/sky_blue"/>

    <Switch
        android:id="@+id/switch_priv_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Stats"
        android:textColor="@color/sky_blue"/>

    <Switch
        android:id="@+id/switch_priv_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allow Private Messages"
        android:textColor="@color/sky_blue"/>
</LinearLayout>

            <!-- Edit/Save/Cancel Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/white"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:backgroundTint="@color/sky_blue"
                    android:textColor="@color/white"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

