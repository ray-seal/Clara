<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="#FFFFFF"
  android:elevation="2dp"
  android:padding="12dp"
  android:layout_margin="6dp">

  <!-- Author Info Section -->
  <LinearLayout
    android:id="@+id/authorSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true">

    <ImageView
      android:id="@+id/authorProfilePicture"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginEnd="12dp"
      android:src="@drawable/ic_person"
      android:scaleType="centerCrop"
      android:background="@drawable/circle_white"/>

    <TextView
      android:id="@+id/authorNameText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Anonymous"
      android:textSize="14sp"
      android:textColor="#555555"
      android:textStyle="bold"/>

  </LinearLayout>

  <!-- Post Content -->
  <TextView
    android:id="@+id/postContentText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Post content"
    android:textSize="16sp"
    android:textColor="#333333"
    android:paddingBottom="8dp"/>

  <!-- Image view for posts with images -->
  <ImageView
    android:id="@+id/postImageView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="8dp"
    android:background="#F5F5F5"
    android:scaleType="centerCrop"
    android:visibility="gone"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"/>

  <!-- Categories -->
  <TextView
    android:id="@+id/postCategoriesText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Categories"
    android:textSize="14sp"
    android:textColor="#FFA500"
    android:paddingBottom="8dp"/>

  <!-- Reactions Section -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
      android:id="@+id/reactionYouGotThis"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="â¤ï¸ 0"
      android:textSize="14sp"
      android:padding="8dp"
      android:layout_marginEnd="8dp"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"/>

    <TextView
      android:id="@+id/reactionNotAlone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ðŸ§¡ 0"
      android:textSize="14sp"
      android:padding="8dp"
      android:layout_marginEnd="8dp"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"/>

    <TextView
      android:id="@+id/reactionWithYou"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ðŸ’› 0"
      android:textSize="14sp"
      android:padding="8dp"
      android:layout_marginEnd="8dp"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"/>

    <TextView
      android:id="@+id/reactionStrong"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ðŸ’š 0"
      android:textSize="14sp"
      android:padding="8dp"
      android:layout_marginEnd="8dp"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"/>

    <TextView
      android:id="@+id/reactionSupport"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ðŸ’™ 0"
      android:textSize="14sp"
      android:padding="8dp"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"/>

  </LinearLayout>

  <!-- Comments and Report Section -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp">

    <LinearLayout
      android:id="@+id/commentsSection"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ’¬"
        android:textSize="16sp"
        android:layout_marginEnd="8dp"/>

      <TextView
        android:id="@+id/commentCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 comments"
        android:textSize="14sp"
        android:textColor="#666666"/>

    </LinearLayout>

    <TextView
      android:id="@+id/reportButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ðŸš© Report"
      android:textSize="12sp"
      android:textColor="#F44336"
      android:padding="8dp"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"/>

    <TextView
      android:id="@+id/deleteButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ðŸ—‘ï¸ Delete"
      android:textSize="12sp"
      android:textColor="#F44336"
      android:padding="8dp"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"
      android:visibility="gone"/>

  </LinearLayout>

</LinearLayout>
