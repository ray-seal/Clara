<resources>
    <!-- Clara custom app theme, inheriting from Material Components -->
    <style name="ClaraTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryDark">@color/sky_blue</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:buttonStyle">@style/ClaraButton</item>
        <item name="android:editTextStyle">@style/ClaraEditText</item>
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:textColorPrimary">@color/sky_blue</item>
        <item name="android:textColorSecondary">@color/orange</item>
    </style>

    <!-- Theme used in other parts of app, preserved for compatibility -->
    <style name="Theme.SupportApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- customise here -->
    </style>

    <style name="ClaraButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ClaraEditText" parent="Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:backgroundTint">@color/sky_blue</item>
    </style>
</resources>
